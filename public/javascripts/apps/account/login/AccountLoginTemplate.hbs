<div data-role="header">
    <h1>Login</h1>
</div>
<form>
    <div style="padding:10px 20px;min-width:400px;">

        <div id="login-message"></div>

        <label for="username" class="ui-hidden-accessible">Username:</label>
        {{#if account.username}}
            <input type="text" name="user" id="username" value="{{account.username}}" disabled="disabled" placeholder="username" data-theme="a">
        {{else}}
            <input type="text" name="user" id="username" value="" placeholder="username" data-theme="a">
        {{/if}}

        <label for="password" class="ui-hidden-accessible">Password:</label>
        <input type="password" name="pass" id="password" value="wynout-password" placeholder="password" data-theme="a">

        {{#if account.username}}
            <div class="ui-grid-a ui-responsive">
                <div class="ui-block-a">
                    <input class="cancel-login" type="button" value="Cancel" data-icon="delete" data-iconpos="left">
                </div>
                <div class="ui-block-b">
                    <a href="#accounts/switch" class="switch-user ui-btn ui-corner-all ui-shadow ui-icon-refresh ui-btn-icon-left">Switch user</a>
                </div>
            </div>

            <div class="ui-grid-solo">
                <div class="ui-block-a" style="margin:0;">
                    <input class="submit-login-credentials" type="button" value="Login" data-icon="check" data-iconpos="left">
                </div>
            </div>
        {{else}}
            <div class="ui-grid-a ui-responsive">
                <div class="ui-block-a">
                    <input class="cancel-login" type="button" value="Cancel" data-icon="delete" data-iconpos="left">
                </div>
                <div class="ui-block-b">
                    <input class="submit-login-credentials" type="button" value="Login" data-icon="check" data-iconpos="left">
                </div>
            </div>
        {{/if}}

    </div>
</form>