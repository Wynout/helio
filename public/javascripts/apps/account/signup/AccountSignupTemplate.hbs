<h1>Signup</h1>

<form action="#signup">

	<label for="username">Username:</label>
	<input type="text" name="username" id="username" value="{{username}}" placeholder="Enter your desired username" data-clear-btn="true">

	<label for="name">Name:</label>
	<input type="text" name="name" id="name" value="{{name}}" placeholder="Enter your name" data-clear-btn="true">

	<label for="email">Email:</label>
	<input type="text" name="email" id="email" value="{{email}}" placeholder="Enter your email address" data-clear-btn="true">

	<label for="password">Password:</label>
	<input type="password" name="password" id="password" value="{{password}}" placeholder="Enter a password" data-clear-btn="true">

	<label for="repeatPassword">Repeat password:</label>
	<input type="password" name="repeatPassword" id="repeatPassword" value="{{repeatPassword}}" placeholder="Repeat password" data-clear-btn="true">

	<label for="termsOfUse">I agree to the <a href="#" id="termsOfUsePopup">terms of use</a></label>
	<input type="checkbox" name="termsOfUse" id="termsOfUse" data-mini="true">

</form>

<div class="ui-grid-a ui-responsive">
	<div class="ui-block-a"><a href="#" class="signup ui-btn ui-shadow ui-corner-all ui-btn-icon-left ui-icon-check">Signup</a></div>
	<div class="ui-block-b"><a href="#" class="cancel ui-btn ui-shadow ui-corner-all ui-btn-icon-left ui-icon-delete" data-rel="back">Cancel</a>
	</div>
</div>

<div id="signup-result"></div>