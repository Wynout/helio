<h1>Signup for a new account</h1>

<form action="#wines/{{_id}}">

	<label for="account-name">Name:</label>
	<input type="text" name="name" id="account-name" value="{{name}}" placeholder="Your name" data-clear-btn="true">

	<label for="account-email">Email:</label>
	<input type="text" name="email" id="account-email" value="{{email}}" placeholder="Your email address" data-clear-btn="true">

	<label for="account-password">Password:</label>
	<input type="text" name="password" id="account-password" value="{{password}}" placeholder="Enter a password" data-clear-btn="true">

</form>

<div class="ui-grid-a ui-responsive">
    <div class="ui-block-a"><a href="#" class="create-account ui-btn ui-shadow ui-corner-all ui-btn-icon-left ui-icon-check">Create</a></div>
    <div class="ui-block-b"><a href="#" class="cancel ui-btn ui-shadow ui-corner-all ui-btn-icon-left ui-icon-delete">Cancel</a></div>
</div>

<div id="create-result"></div>