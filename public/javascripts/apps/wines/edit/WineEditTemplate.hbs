<form role="form">
	<div class="form-group">
		<label for="wine-id">{{labels.id}}:</label>
		<input type="text" class="form-control" name="id" id="wine-id" value="{{_id}}" placeholder="{{placeholders.id}}" disabled="disabled">
	</div>

	<div class="form-group">
		<label for="wine-name">{{labels.name}}:</label>
		<input type="text" class="form-control" name="name" id="wine-name" value="{{name}}" placeholder="{{placeholders.name}}" data-clear-btn="true">
	</div>

	<div class="form-group">
		<label for="wine-grapes">{{labels.grapes}}:</label>
		<input type="text" class="form-control" name="grapes" id="wine-grapes" value="{{grapes}}" placeholder="{{placeholders.grapes}}" data-clear-btn="true">
	</div>

	<div class="form-group">
		<label for="wine-country">{{labels.country}}</label>
		<input type="text" class="form-control" name="country" id="wine-country" value="{{country}}" placeholder="{{placeholders.country}}" data-clear-btn="true">
	</div>

	<div class="form-group">
		<label for="wine-region">{{labels.region}}:</label>
		<input type="text" class="form-control" name="region" id="wine-region" value="{{region}}" placeholder="{{placeholders.region}}" data-clear-btn="true">
	</div>

	<div class="form-group">
		<label for="wine-year">{{labels.year}}:</label>
		<input type="text" class="form-control" name="year" id="wine-year" value="{{year}}" placeholder="{{placeholders.year}}" data-clear-btn="true">
	</div>

	<div class="form-group">
		<label for="wine-description">{{labels.description}}:</label>
		<textarea name="description" class="form-control" id="wine-description" placeholder="{{placeholders.description}}" rows="6">{{description}}</textarea>
	</div>

	<div id="alert-error-region"></div>

	<button type="submit" class="save btn btn-primary"><span class="glyphicon glyphicon-ok"></span> {{buttons.save}}</button>
	<button type="submit" class="delete-confirm btn btn-danger"><span class="glyphicon glyphicon-remove"></span> {{buttons.delete}}</button>
</form>

<br />
<div id="alert-success-region"></div>