<form action="#wines/{{_id}}">
	<label for="wine-id">{{labels.id}}:</label>
	<input type="text" name="id" id="wine-id" value="{{_id}}" placeholder="{{placeholders.id}}" disabled="disabled">

	<label for="wine-name">{{labels.name}}:</label>
	<input type="text" name="name" id="wine-name" value="{{name}}" placeholder="{{placeholders.name}}" data-clear-btn="true">

	<label for="wine-grapes">{{labels.grapes}}:</label>
	<input type="text" name="grapes" id="wine-grapes" value="{{grapes}}" placeholder="{{placeholders.grapes}}" data-clear-btn="true">

	<label for="wine-country">{{labels.country}}</label>
	<input type="text" name="country" id="wine-country" value="{{country}}" placeholder="{{placeholders.country}}" data-clear-btn="true">

	<label for="wine-region">{{labels.region}}:</label>
	<input type="text" name="region" id="wine-region" value="{{region}}" placeholder="{{placeholders.region}}" data-clear-btn="true">

	<label for="wine-year">{{labels.year}}:</label>
	<input type="text" name="year" id="wine-year" value="{{year}}" placeholder="{{placeholders.year}}" data-clear-btn="true">

	<label for="wine-description">{{labels.description}}:</label>
	<textarea name="description" id="wine-description" placeholder="{{placeholders.description}}">{{description}}</textarea>
</form>

<div class="ui-grid-a ui-responsive">
    <div class="ui-block-a"><a href="#" class="save ui-btn ui-shadow ui-corner-all ui-btn-icon-left ui-icon-check">{{buttons.save}}</a></div>
    <div class="ui-block-b"><a href="#" class="delete-confirm ui-btn ui-shadow ui-corner-all ui-btn-icon-left ui-icon-delete">{{buttons.delete}}</a></div>
</div>

<div id="save-result"></div>