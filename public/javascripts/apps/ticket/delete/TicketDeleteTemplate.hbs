<div class="modal-dialog">
	<div class="modal-content">
		<div class="modal-header">
			<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
			<h4 class="modal-title" id="modalTitleLabel">{{modal.title}}</h4>
		</div>
		<div class="modal-body">
			<h3>{{name}}</h3>
			<p>{{modal.message}}</p>
		</div>
		<div class="modal-footer">
			<button type="button" class="cancel btn btn-primary" data-dismiss="modal"><i class="fa fa-undo fa-lg"></i> {{buttons.cancel}}</button>
			<button type="button" class="delete-confirmed btn btn-danger"><i class="fa fa-trash-o fa-lg"></i> {{buttons.delete}}</button>
		</div>
	</div>
</div>